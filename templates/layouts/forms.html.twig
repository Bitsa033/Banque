<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel" style="color: black;">Votre nouveau solde est de: </h4>
        </div>
        <div class="modal-body">
          <div id="message"></div>
            <form autocomplete="off" id="quickForm">

              <div class="form-group">
                <input type="text" name="name" class="form-control" id="name" placeholder="Votre Nom" data-rule="minlen:1" data-msg="Entrer un nom valide d'aumoins 4 caractères" >
                <div class="validate"></div>
              </div>
              <div class="form-group">
                <input type="number" name="old" class="form-control" id="old" placeholder="Vore Age" data-rule="minlen:4" data-msg=" Entrer un prenom valide d'aumoins 4 caractères">
                <div class="validate"></div>
              </div>
              <div class="form-group">
                <input type="name" name="adresse" class="form-control" id="adresse" placeholder="Votre contact" data-rule="minlen:1" data-msg="Entrer un sexe valide">
                <div class="validate"></div>
              </div>

              <div class="loading"></div>
              <div class="error-message"></div>
              <div class="sent-message">Your message has been sent. Thank you!</div>

            {# </form> #}
        </div>
        <div class="modal-footer">
            <button type="reset" class="btn btn-default">Annuler la saisie</button>
            <button type="submit" class="btn btn-primary" id="click">Enregistrer</button>
              <button type="button" class="btn btn-default" data-dismiss="modal">Femer</button>
            </form>
        </div>
    </div>
</div>